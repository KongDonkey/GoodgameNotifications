<Page
    x:Class="App1.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="360">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Goodgame login:" FontWeight="Bold" FontSize="29.333" Margin="12"></TextBlock>
            <TextBox x:Name="loginBox" Margin="12"></TextBox>
            <TextBlock Text="Password:" FontWeight="Bold" FontSize="29.333" Margin="12"></TextBlock>
            <PasswordBox x:Name="passBox" Margin="12"></PasswordBox>
            <Button x:Name="okButton" Content="Ok" FontSize="29.333" Margin="12" HorizontalAlignment="Center" Click="LoginButton_clicked"></Button>
        </StackPanel>
    </Grid>
</Page>
